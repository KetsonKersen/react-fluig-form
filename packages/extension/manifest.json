{
  "manifest_version": 3,
  "name": "Fluig Method Capture",
  "description": "Extensão para capturar e proxy de métodos do Fluig",
  "version": "1.0",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": [
    "https://*.fluig.cloudtotvs.com.br/*",
    "https://{{FLUIG_DOMAIN}}/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.fluig.cloudtotvs.com.br/*",
        "https://{{FLUIG_DOMAIN}}/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["page-script.js"],
      "matches": [
        "https://*.fluig.cloudtotvs.com.br/*",
        "https://{{FLUIG_DOMAIN}}/*"
      ]
    }
  ],
  "icons": {}
}

