{
  "name": "react-fluig",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel --silent dev:api dev:front dev:ext",
    "dev:api": "npm --workspace=packages/api run dev",
    "dev:front": "npm --workspace=packages/react run dev",
    "dev:ext": "chokidar 'packages/extension/manifest.template.json' '.env' -c 'node packages/extension/build-manifest.js' --silent",
    "build": "npm --workspace=packages/react run build"
  },
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "dotenv": "^16.3.1",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "chalk": "^5.6.2"
  }
}
